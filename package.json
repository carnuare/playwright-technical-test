{
  "name": "playwright-technical-test",
  "version": "1.0.0",
  "description": "Technical test that runs UI and API automated tests using Playwright",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc",
    "test": "playwright test",
    "test-api": "playwright test --project=api",
    "test-ui": "playwright test --project=ui-chromium --project=ui-firefox",
    "test-report": "playwright show-report"
  },
  "author": "Carlos Núñez",
  "license": "ISC",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@eslint/create-config": "1.10.0",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
